  "license": "ISC",
  "dependencies": {
    "@playwright/test": "^1.30.0",
    "playwright-test": "^8.2.0",
    "prettier": "^2.8.4"
  },
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "Automated software testing"
  }
}
